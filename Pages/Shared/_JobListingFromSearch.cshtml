@page
@model List<Job>
@using Job_Post_Website.ScaffoldedModels;
@{
}

<div class="container p-3">
    <div class="row pt=4">
        <div class="col-6">
            <h2 class="text-primary">Job List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary"><i class="bi bi-pencil-square"></i> &nbsp;Post A New Job</a>
        </div>
    </div>

    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Job Name
                </th>
                <th>
                    Job Description
                </th>
                <th>
                    Date Posted
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            
            foreach (var obj in Model)
            {
                <tr>
                    <td>
                        <a asp-page="ViewJob" asp-route-id="@obj.Id">@obj.Name</a>
                    </td>

                    @if (obj.Description.Length > 40)
                    {
                        string shortenedDescription = "";
                        for (int i = 0; i < 40; i++)
                        {
                            shortenedDescription += obj.Description[i];
                        }
                        shortenedDescription += "...";
                        <td>@shortenedDescription</td>
                    }
                    else
                    {
                        <td>@obj.Description</td>
                    }

                    <td>@obj.DateTimePosted</td>
                </tr>
            }
        </tbody>
    </table>

</div>