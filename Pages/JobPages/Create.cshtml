@page
@model Job_Post_Website.Pages.JobPages.CreateModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Create Job</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="_job.Name"></label>
            <input asp-for="_job.Name" class="form-control" />
            <span asp-validation-for="_job.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="_job.Description"></label>
            <input asp-for="_job.Description" class="form-control" />
            <span asp-validation-for="_job.Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
